---
import Modal from '../Footer/Modal.astro'

export interface Props {
    modalBg?: string;
    modalText?: string
}

const { modalBg, modalText} = Astro.props;

---

<!-- MODAL CAPA DE ABAJO ======================= -->
<div class="modal1 border-blue-700 border-4 w-full h-full bg-black bg-opacity-10 fixed top-full inset-0 flex justify-center item-end backdrop-blur-lg z-50">

  <button type="button" class="boton text-red-900 bg-transparent hover:bg-gray-200 hover:text-red-600 hover:border-red-600 border-2 rounded-lg text-lg p-4 fixed top-2.5 right-2.5 inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" >
    <svg aria-hidden="true" class="cruz w-10 h-10" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
  </button>

<!-- MODAL CON TODO EL PARRAFO =======================   -->
    <div class="flex flex-col">

      <Modal modalBg={modalBg} modalText={modalText} />

    </div>
</div>


<!-- AVISO LEGAL ======================= -->
<main class=`text-white text-center py-2 text-sm m-auto`>
    <footer class= "aviso m-auto w-auto cursor-pointer hover:brightness-75">
        Aviso legal --- <span> Marca registrada @</span>
    </footer>
</main>


<script>
      const modal1 = document.querySelector('.modal1')
      const boton = document.querySelector('.boton')
      const aviso = document.querySelector('.aviso')
      aviso.addEventListener('click', () => {
          modal1.classList.remove('top-full')
          modal1.classList.add('top-0')
          modal1.classList.remove('animate-slide-down')
          modal1.classList.add('animate-slide-up')
          // modal1.classList.add('pointer-events-none')
          // modal1.classList.remove('bg-opacity-100')
          // modal1.classList.add('animate-slide-up')
      })
      boton.addEventListener('click', () => {
          modal1.classList.remove('top-0')
          modal1.classList.add('top-full')
          modal1.classList.remove('animate-slide-up')
          modal1.classList.add('animate-slide-down')
      })
  
</script>

<style>
    .animate-slide-up {
      animation: slideUp 1s ease-in-out;
    }
  
    @keyframes slideUp {
      0% {
        transform: translateY(100%);
      }
      100% {
        transform: translateY(0);
      }
    }
    .animate-slide-down {
      animation: slideDown 1s ease-in-out;
    }
  
    @keyframes slideDown {
      0% {
        transform: translateY(-100%);
      }
      100% {
        transform: translateY(0%);
      }
    }
  </style>



