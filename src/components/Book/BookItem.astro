---

export interface Props {
  id: string
  title: string
  img: string
  three?: string
}

const {
  id,
  title,
  img,
} = Astro.props
---


<a class="" href={`/${id}`}>
  <img
    alt={`Portada del libro ${title}`}
    class="aspect-[500/500] object-contain " 
    src={img}
    style={`view-transition-name: book-${id}`}
  />
</a>
