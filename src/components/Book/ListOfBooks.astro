---
import BookItem from "./BookItem.astro";
import { books } from '../../data/books'
---

<ul class="grid sm:grid-cols-2 md:grid-cols-6 gap-8 border-8 border-orange-400 justify-center place-content-center">
  {
    books.map(({ id, title, img, three }) => {

      return (
        <li class="w-full rounded shadow-sombra2 transition-all duration-500 border-white border-2 hover:scale-105 hover:shadow-sombra1 hover:-translate-y-4 ease-in-out m-16">
          <BookItem id={id} title={title} img={img} three={three} />
        </li>
      )
    })
  }
</ul>


